@model List<TPHS.Models.Animal>
<h1>@ViewBag.Title</h1>

<table class="table">

    <tr>
        <th>Name</th>
        <th>Allergy</th>
        <th>Next Vet Date</th>
        <th>Special Vet</th>
        <th>Type</th>

    </tr>

    @foreach (var animal in Model)
    {
        <tr>
            <td>@animal.Name</td>
            <td>@animal.Allergy</td>
            <td>@animal.Vet</td>
            <td>@animal.SpecialVet</td>
            <td>@animal.AnimalType.Name</td>
        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <p>No Animals yet!</p>
}

<p><a asp-controller="Animal" asp-action="Add">Add Animal</a></p>
<p><a asp-controller="Animal" asp-action="Remove">Remove Animal</a></p>

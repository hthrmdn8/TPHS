<!DOCTYPE html>
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<ApplicationUser> signInManager;
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TPHS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand"> 
                <asp-area="Index" asp-controller="Account" asp-action="Login">TPHS</a>
                <button stype="width:auto" class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                   
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">


                    </ul>
                    <ul class="nav navbar-nav ml-auto">
                        @if (signInManager.IsSignedIn(User))
                        {
                        
                            <li><a asp-controller="Animal" asp-action="Index" class="nav-link btn btn-link py-0"
                                   style="padding-right: 100px">Animals</a></li>
                            <li><a asp-controller="AnimalType" asp-action="Index" class="nav-link btn btn-link py-0"
                                   style="padding-right: 100px">AnimalTypes</a></li>
                        
                            <li>
                                <form method="post" asp-action="logout" asp-controller="account">
                                    <button type="submit" class="nav-link btn btn-link py-0"
                                            stype="width:auto">
                                        Logout @User.Identity.Name
                                    </button>
                                </form>
                            </li>

                        }
                        else
                        {
                            <li class="nav-item">
                            <li><a asp-controller="Account" asp-action="Register" class="nav-link">Register</a></li>
                            <li><a asp-controller="Account" asp-action="Login" class="nav-link">Login</a></li>
                            </li>
                        }
                    </ul>
                </div>

            
            </div>
           
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - TPHS - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
